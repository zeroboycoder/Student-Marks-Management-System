<%- include("./partial/header.ejs") %>

<%- include("./partial/navagation.ejs") %>

<% if(result) { %>
    <% result.data.forEach(data => { %>
        <div class="container-fluid">
            <table class="table table-hover table-sm" style="width:500px;">
                <tr>
                    <td>
                        <h4>Student ID </h4>
                    </td>
                    <td>
                        <h4> - </h4>
                    </td>
                    <td>
                        <h4><%= data.specificStudentId %></h4>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h4>Student Name</h4>
                    </td>
                    <td>
                        <h4> - </h4>
                    </td>
                    <td>
                        <h4><%= data.specificStudentName %></h4>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h4>Major</h4>
                    </td>
                    <td>
                        <h4> - </h4>
                    </td>
                    <td>
                        <h4><%= data.specificMajor %></h4>
                    </td>
                </tr>
            </table>

            <div>
            <h3><%= data.year %>( <%= data.acadamicYear %> )</h3>
            <h4> Roll No - <%= data.rollno %></h4>
            <table class="table table-striped">
                <tr>
                    <td></td>
                    <% data.subjects.forEach(subject => { %>
                    <td><%= subject %></td>
                    <% }) %>
                    <td></td>
                </tr>
                <% semester.forEach(sem => { %>
                    <tr>
                        <td> <%= sem.examType %></td>
                        <% sem.marks.forEach(mark => { %>
                            <td> <%= mark %> </td>
                        <% }) %>
                        <td id="button">
                            <span style="float: left;">
                                <form action="/students/<%= id %>/edit" method="POST">
                                    <input type="hidden" name="studentId" value="<%= data.specificStudentId %>">
                                    <input type="hidden" name="studentName" value="<%= data.specificStudentName %>">
                                    <input type="hidden" name="rollno" value="<%= data.rollno %>">
                                    <input type="hidden" name="year" value="<%= data.year %>">
                                    <input type="hidden" name="acadamicYear" value="<%= data.acadamicYear %>">
                                    <input type="hidden" name="major" value="<%= data.specificMajor %>">
                                    <input type="hidden" name="examType" value="<%= sem.examType %>">
                                    <button class="btn btn-outline-success btn-sm">Edit</button>
                                </form>
                            </span>
                            <span style="float: right;">
                                <form action="/students/<%= id %>/delete" method="POST">
                                    <input type="hidden" name="studentId" value="<%= data.specificStudentId %>">
                                    <input type="hidden" name="studentName" value="<%= data.specificStudentName %>">
                                    <input type="hidden" name="rollno" value="<%= data.rollno %>">
                                    <input type="hidden" name="year" value="<%= data.year %>">
                                    <input type="hidden" name="acadamicYear" value="<%= data.acadamicYear %>">
                                    <input type="hidden" name="major" value="<%= data.specificMajor %>">
                                    <input type="hidden" name="examType" value="<%= sem.examType %>">
                                    <button class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </span>
                        </td>
                    </tr>
                <% }) %>
            </table>
        </div>


    <% }) %>
<% } %>


<%- include("./partial/footer.ejs") %>